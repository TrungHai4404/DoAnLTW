@model DoAnLTW_Nhom4.Models.ProductCreateViewModel
@using DoAnLTW_Nhom4.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "_LayoutAdmin";
}

<h1>Thêm sản phẩm</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Add" method="post" enctype="multipart/form-data" id="addProductForm">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.DiscountPrice" class="control-label"></label>
                <input asp-for="Product.DiscountPrice" class="form-control" />
                <span asp-validation-for="Product.DiscountPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Stock" class="control-label"></label>
                <input asp-for="Product.Stock" class="form-control" />
                <span asp-validation-for="Product.Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Ảnh sản phẩm</label>
                <input type="file" asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagesUrl">Ảnh bổ sung</label>
                <input type="file" asp-for="ImagesUrl" class="form-control" multiple />
                <span asp-validation-for="ImagesUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.BrandId" class="control-label"></label>
                <select asp-for="Product.BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                <span asp-validation-for="Product.BrandId" class="text-danger"></span>
            </div>

            <div id="specifications">
                <h4>Thông số kỹ thuật</h4>
                <div class="form-group specification-template" style="display:none;">
                    <label>Tên thông số</label>
                    <input name="Product.ProductSpecifications[0].Key" class="form-control specification-key" />
                    <label>Giá trị</label>
                    <input name="Product.ProductSpecifications[0].Value" class="form-control specification-value" />
                    <button type="button" class="btn btn-danger remove-specification">Xóa</button>
                </div>
            </div>
            <button type="button" id="add-specification" class="btn btn-secondary">Thêm thông số</button>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            var specificationIndex = 0;

            $("#add-specification").click(function () {
                var template = $(".specification-template").clone();  // Use class selector
                template.removeClass("specification-template"); // Remove class to avoid future cloning of the original
                template.removeAttr("style");
                template.find("input.specification-key").attr("name", "Product.ProductSpecifications[" + specificationIndex + "].Key");
                template.find("input.specification-value").attr("name", "Product.ProductSpecifications[" + specificationIndex + "].Value");
                $("#specifications").append(template);
                specificationIndex++;
            });

            $(document).on("click", ".remove-specification", function () {
                $(this).closest(".form-group").remove();
            });

            $("#addProductForm").validate({
                rules: {
                    "ImageUrl": {
                        extension: "jpg|jpeg|png|gif",
                        filesize: 1048576 // 1MB
                    },
                    "ImagesUrl": {
                        extension: "jpg|jpeg|png|gif",
                        filesize: 1048576 // 1MB
                    }
                },
                messages: {
                    "ImageUrl": {
                        extension: "Vui lòng tải lên file ảnh hợp lệ (jpg, jpeg, png, gif).",
                        filesize: "Dung lượng ảnh phải nhỏ hơn 1MB."
                    },
                    "ImagesUrl": {
                        extension: "Vui lòng tải lên file ảnh hợp lệ (jpg, jpeg, png, gif).",
                        filesize: "Mỗi ảnh phải nhỏ hơn 1MB."
                    }
                }
            });
        });
    </script>
}
