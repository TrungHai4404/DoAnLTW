@model DoAnLTW_Nhom4.Models.ApplicationUser  // Hoặc một ViewModel nếu cần

@{
    ViewData["Title"] = "Tạo người dùng";
}
<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />

<h1>Tạo người dùng</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="email" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên đầy đủ</label>
                <input name="fullName" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu</label>
                <input name="password" type="password" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Chọn quyền</label>
                <select name="role" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="Admin">Employee</option>
                    <option value="User">Customer</option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>