@model IEnumerable<DoAnLTW_Nhom4.Models.Category>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý danh mục";
}
<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />

<div class="admin-container">
    <h2>Danh mục sản phẩm</h2>
    @if (User.IsInRole("Employee"))
    {
        <div class="button-add">
            <a asp-action="Add" class="btn add-category-btn">Thêm danh mục mới</a>
        </div>
    }
    
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn edit-btn" title="Sửa">✏️</a> |
                            @if (User.IsInRole("Employee"))
                            {
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger delete-btn" title="Xóa">🗑</a>
                            }
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">Không có danh mục nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>