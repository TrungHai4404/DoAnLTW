@model DoAnLTW_Nhom4.Models.Review
@{
    ViewData["Title"] = "Chi tiết đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<link rel="stylesheet" href="~/css/review-admin.css" />

<div class="review-container">
    <h2 class="review-title">Chi tiết đánh giá</h2>

    <div class="review-detail-box">
        <dl class="row">
            <dt class="col-sm-2">Người dùng</dt>
            <dd class="col-sm-10">@Model.UserName</dd>

            <dt class="col-sm-2">Sản phẩm</dt>
            <dd class="col-sm-10">@Model.Product?.Name</dd>

            <dt class="col-sm-2">Đánh giá</dt>
            <dd class="col-sm-10">@Model.Rating</dd>

            <dt class="col-sm-2">Bình luận</dt>
            <dd class="col-sm-10">@Model.Comment</dd>

            <dt class="col-sm-2">Trạng thái</dt>
            <dd class="col-sm-10">@Model.IsApproved</dd>

            <dt class="col-sm-2">Ngày tạo</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
        <a class="btn btn-secondary btn-sm" asp-action="Index">Quay lại</a>
    </div>
</div>
